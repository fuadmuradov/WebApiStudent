@model List<StudentGetDto>
@{
    ViewData["Title"] = "StudentGet";
    int count = 0;
}


<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="mb-3">
                <a asp-controller="Student" asp-action="StudentCreate"><button class="btn btn-outline-success">Add new Student</button></a>
            </div>
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Student Name</th>
                        <th scope="col">Group Name</th>
                        <th scope="col">Action</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                    <tr>

                        <td>@count</td>
                        <th scope="row">@item.Fullname</th>
                        <td>@item.Groupname</td>

                        <td>
                            <a asp-controller="Student" asp-action="StudentDelete" asp-route-id="@item.Id"><button class="btn btn-outline-danger ml-2">Delete</button></a>
                            <a asp-controller="Student" asp-action="StudentEdit" asp-route-id="@item.Id"><button class="btn btn-outline-warning">Edit</button></a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>


